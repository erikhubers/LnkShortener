<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.one2one.lnkshortener">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="nl.one2one.lnkshortener.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nl.one2one.lnkshortener.DisplayShortenedUrlActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/activity_display_url"
            android:parentActivityName="nl.one2one.lnkshortener.DisplayShortenedUrlActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.one2one.lnkshortener.DisplayShortenedUrlActivity" />

            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
            android:name="nl.one2one.lnkshortener.SettingsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/activity_settings"
            android:parentActivityName="nl.one2one.lnkshortener.DisplayShortenedUrlActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.one2one.lnkshortener.DisplayShortenedUrlActivity" />
        </activity>
        <activity
            android:name="nl.one2one.lnkshortener.SetupActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Setup">
            <intent-filter>
                <action android:name="nl.one2one.lnkshortener.SetupActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>